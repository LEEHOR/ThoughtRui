<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:background">@drawable/bg_fff_background</item>       控制基础view,viewgroup,dialog  de window默认背景，不设置则透明（button貌似不行）-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Table样式-->
    <style name="TextAppearance.Design.Tab.Custom" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">@dimen/dp_14</item>
    </style>

    <style name="Photo_See_Animation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/photo_push_center_in</item>
        <item name="android:windowExitAnimation">@anim/photo_push_center_out</item>
    </style>



    <style name="normal_edittext_style">

        <item name="android:textSize">@dimen/dp_14</item>
        <item name="android:background">@null</item>
    </style>


    <style name="bottom_in_out_animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="top_in_out_animation">
        <item name="android:windowEnterAnimation">@anim/push_top_in</item>
        <item name="android:windowExitAnimation">@anim/push_top_out</item>
    </style>
<!--<item name="android:gravity">center_vertical</item>-->
    <style name="Searchbar_hint_left">
        <item name="android:background">@drawable/bg_searchbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableStart">@mipmap/search</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:textCursorDrawable">@drawable/my_cursor</item>
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_marginLeft">@dimen/edge_margin</item>
        <item name="android:layout_marginRight">@dimen/edge_margin</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">#fff</item>
        <item name="android:textSize">12dp</item>
        <item name="android:hint">搜索</item>
    </style>

    <style name="MyCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_beautiful_selector</item>
        <item name="android:maxHeight">@dimen/dp_40</item>
    </style>

</resources>
