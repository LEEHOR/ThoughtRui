                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:text="2018-03-26 14:19"
                        android:textSize="14dp"
                        android:textColor="@color/material_grey_550"
                        android:layout_weight="0.5"
                        android:gravity="end" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/material_grey_550" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_height="44dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textSize="15dp"
                        android:textColor="@color/material_grey_850"
                        android:text="项目周期"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/info_project_projectCycle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:text="2018-03-26-2018-05-27"
                        android:layout_weight="0.5"
                        android:textColor="@color/material_grey_550"
                        android:textSize="14dp"
                        android:gravity="end" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@color/material_grey_550" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:gravity="center">
