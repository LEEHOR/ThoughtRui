                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:textColor="@color/material_grey_550"
                        android:textSize="14dp"
                        android:ellipsize="end"
                        android:layout_marginLeft="5dp"
                        android:singleLine="true"
                        android:text="武汉仁和胜利车业有限公司"
                        android:layout_weight="0.5"
                        android:gravity="end" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/material_grey_550" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="15dp"
                        android:text="经销商代码"
                        android:textColor="@color/material_grey_850"
                        android:textSize="15dp" />

                    <TextView
                        android:id="@+id/info_project_dealerNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:paddingRight="15dp"
                        android:text="11.43002"
                        android:textColor="@color/material_grey_550"
                        android:textSize="14dp"
                        android:gravity="end" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/material_grey_550" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textSize="15dp"
                        android:textColor="@color/material_grey_850"
                        android:text="经销商等级"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/info_project_deliveryGrade"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:textColor="@color/material_grey_550"
                        android:textSize="14dp"
                        android:text="c"
                        android:layout_weight="0.5"
                        android:gravity="end" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/material_grey_550" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/addressView"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textSize="15dp"
                        android:textColor="@color/material_grey_850"
                        android:text="地址"
                        />

                    <TextView
                        android:id="@+id/info_project_Address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:textColor="@color/material_grey_550"
                        android:textSize="14dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:layout_marginLeft="5dp"
                        android:text="湖北省武汉市北岸区竹叶山中环商贸城C9-11"
                        android:layout_weight="1"
                        android:maxLines="1"
                        android:gravity="end" />
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@mipmap/more"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/material_grey_550" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="30dp"
                    android:background="@color/material_grey_10">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textSize="12dp"
                        android:textColor="@color/material_grey_550"
                        android:text="项目进度"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textSize="15dp"
                        android:textColor="@color/material_grey_850"
                        android:text="访问状态"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/info_project_accessStatues"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:textSize="14dp"
                        android:text="未完成(51/100)"
                        android:textColor="#ff0000"
                        android:layout_weight="0.5"
                        android:gravity="end"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/material_grey_550" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textSize="15dp"
                        android:textColor="@color/material_grey_850"
                        android:text="上传状态"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/info_project_uploadStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingRight="15dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="@color/material_grey_550"
                        android:textSize="14dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="数据51条已上传,附件9个未上传"
                        android:layout_weight="0.5"
                        />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/material_grey_550" />
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="30dp"
                    android:background="@color/material_grey_10">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="15dp"
                        android:textSize="12dp"
                        android:textColor="@color/material_grey_550"
                        android:text="项目说明"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/material_grey_550" />
                <TextView
                    android:id="@+id/info_project_remakes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="这里是说明这里是说明这里是说明这里是说明这里是说明这里是说明这里是说明这里是说明这里是说明这里是说明这里是说明这里是说明"

