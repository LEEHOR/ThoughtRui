<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <View
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/dp_5"
        app:contentPadding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


   <LinearLayout
       android:gravity="center_horizontal"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <TextView
           android:padding="@dimen/dp_5"
           android:gravity="center"
           android:textSize="@dimen/dp_14"
           android:textColor="#333333"
           android:text="hsdsasdjadadsasda"
           android:id="@+id/play_music_name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content" />
       <RelativeLayout
           android:padding="@dimen/dp_10"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <LinearLayout
               android:id="@+id/line_seekbar"
               android:layout_alignParentTop="true"
               android:padding="@dimen/dp_10"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
               <SeekBar
                   android:id="@+id/play_seekBar"
                   android:layout_width="0dp"
                   android:layout_weight="1"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/play_point"
                   android:textSize="@dimen/dp_12"
                   android:textColor="@color/black"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:textSize="@dimen/dp_12"
                   android:textColor="@color/black"
                   android:text="/"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />
               <TextView
                   android:id="@+id/play_count"
                   android:textSize="@dimen/dp_12"
                   android:textColor="@color/black"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent" />
           </LinearLayout>
           <RelativeLayout
               android:paddingLeft="15dp"
               android:paddingRight="15dp"
               android:layout_marginTop="@dimen/dp_10"
               android:layout_below="@+id/line_seekbar"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
              <TextView
                  android:layout_centerVertical="true"
                  android:layout_alignParentLeft="true"
                  android:id="@+id/tv_PlayorPause"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="@dimen/dp_14"
                  android:background="@drawable/dialog_music"
                  android:text="播放"
                  android:textAllCaps="false"
                  android:textColor="@color/colorWhite"/>
               <TextView
                   android:layout_centerVertical="true"
                   android:layout_centerInParent="true"
                   android:id="@+id/tv_Stop"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/dp_14"
                   android:background="@drawable/dialog_music"
                   android:text="停止"
                   android:textAllCaps="false"
                   android:textColor="@color/colorWhite"/>
               <TextView
                   android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                   android:id="@+id/tv_Qiut"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/dp_14"
                   android:background="@drawable/dialog_music"
                   android:text="退出"
                   android:textAllCaps="false"
                   android:textColor="@color/colorWhite"/>
           </RelativeLayout>
       </RelativeLayout>
   </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
