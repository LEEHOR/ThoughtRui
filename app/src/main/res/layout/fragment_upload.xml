<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <FrameLayout
        android:layout_alignParentTop="true"
        android:id="@+id/search_fr"
        android:background="#2D7DFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"

            android:id="@+id/re_search_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                android:id="@+id/iv_search_back"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/mytab_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/ed_search_2"
                android:layout_toRightOf="@+id/iv_search_back"
                android:layout_toLeftOf="@+id/search_cancel_2"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:imeOptions="actionSearch"
                style="@style/Searchbar_hint_left"
                android:focusable="false"
                android:cursorVisible="false"
                android:focusableInTouchMode="false"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="@dimen/dp_36" />
            <TextView
                android:layout_marginRight="@dimen/dp_5"
                android:visibility="visible"
                android:id="@+id/search_cancel_2"
                android:text="取消"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp_14"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_below="@+id/search_fr"
        android:background="@color/colorWhite"
        android:id="@+id/fr_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/re_top"
        android:padding="@dimen/edge_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="false"
            android:textColor="#333333"
            android:textSize="@dimen/dp_12"
            android:id="@+id/tv_data_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:enabled="false"
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_Batch_Management"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dp_14"
            android:textColor="#FF8103"
            android:text="@string/upload_fragment_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:enabled="false"
            android:id="@+id/tv_all_upload"
            android:text="@string/upload_fragment_3"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_Batch_Management"
            android:textSize="@dimen/dp_14"
            android:textColor="#FF8103"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </FrameLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/up_swipe"
        android:layout_below="@+id/fr_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:visibility="gone"
            android:id="@+id/up_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <androidx.cardview.widget.CardView
        android:visibility="gone"
        android:id="@+id/card_bottom"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        android:layout_alignParentBottom="true">
    <RelativeLayout
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/ck_bottom"
            android:padding="@dimen/dp_5"
            style="@style/MyCheckBox"
            android:text="@string/upload_fragment_4"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_Batch_UpLoad"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/colorWhite"
            android:text="@string/upload_fragment_5"
            android:background="@mipmap/oval_shaped"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
