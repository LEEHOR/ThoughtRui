<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/material_grey_200">
    <FrameLayout
        android:background="@color/colorWhite"
        android:id="@+id/fr_top"
        android:paddingTop="@dimen/dp_10"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/re_top"
        android:padding="@dimen/edge_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_centerVertical="false"
            android:layout_alignParentLeft="false"
            android:textColor="#333333"
            android:textSize="@dimen/dp_12"
            android:id="@+id/tv_data_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="@dimen/dp_10"
            android:id="@+id/tv_Batch_Management"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/dp_14"
            android:textColor="#FF8103"
            android:text="批量管理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_all_upload"
            android:text="全部上传"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_Batch_Management"
            android:textSize="@dimen/dp_14"
            android:textColor="#FF8103"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </FrameLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/up_swipe"
        android:layout_below="@+id/fr_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/up_recycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:id="@+id/card_bottom"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardPreventCornerOverlap="true"
        android:layout_alignParentBottom="true">
    <RelativeLayout
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="10dp"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/ck_bottom"
            android:padding="@dimen/dp_5"
            style="@style/MyCheckBox"
            android:text="全选"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_Batch_UpLoad"
            android:gravity="center"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/colorWhite"
            android:text="批量上传"
            android:background="@mipmap/oval_shaped"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
