<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:landptf="http://schemas.android.com/apk/res-auto"
android:visibility="gone"
    android:id="@+id/plan_recycler_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:padding="@dimen/edge_margin"
        android:text="@string/plan_2_10"
        android:textSize="@dimen/dp_14"
        android:background="@color/material_grey_100"
        android:textColor="#333333"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/plan_2_tv_reason"
        android:gravity="top"
        android:hint="@string/phrases_31"
        android:padding="@dimen/dp_5"
        android:background="@color/colorWhite"
        android:minLines="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/edge_margin"
        landptf:cardCornerRadius="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/plan_2_recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp">
            </androidx.recyclerview.widget.RecyclerView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
