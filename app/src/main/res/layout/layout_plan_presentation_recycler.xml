<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:landptf="http://schemas.android.com/apk/res-auto"
    android:id="@+id/plan_recycler_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_grey_100"
        android:padding="@dimen/edge_margin"
        android:text="@string/plan_2_10"
        android:textColor="#333333"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:id="@+id/plan_2_tv_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite"
        android:gravity="top"
        android:hint="@string/phrases_31"
        android:minLines="5"
        android:padding="@dimen/dp_5" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edge_margin"
        landptf:cardCornerRadius="@dimen/dp_5">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/plan_2_recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp"></androidx.recyclerview.widget.RecyclerView>
    </androidx.cardview.widget.CardView>
</LinearLayout>
