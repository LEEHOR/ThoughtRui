<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_marginLeft="@dimen/dp_10"
   android:layout_marginRight="@dimen/dp_10">
    <ImageView
        android:layout_marginTop="@dimen/dp_10"
        android:id="@+id/notifi_iv"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentLeft="true"
       android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/notifi_tv_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/notifi_iv"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_toRightOf="@+id/notifi_iv"
        android:textColor="#999999"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:lines="2"
        android:ellipsize="end"
        android:id="@+id/notifi_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notifi_iv"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_below="@+id/notifi_tv_tittle"
        android:layout_toRightOf="@+id/notifi_iv"
        android:textColor="#333333"
        android:textSize="@dimen/dp_14" />

    <TextView
        android:layout_alignLeft="@+id/notifi_tv_content"
        android:id="@+id/notifi_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notifi_tv_content"
        android:textColor="#CCCCCC"
        android:textSize="@dimen/dp_12" />
    <View
        android:background="#EEEEEE"
        android:layout_alignLeft="@+id/notifi_tv_time"
        android:layout_below="@+id/notifi_tv_time"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"/>
</RelativeLayout>
