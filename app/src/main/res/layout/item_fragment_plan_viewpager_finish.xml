<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        app:cardElevation="5dp"
        android:id="@+id/item_plan_finish"
       android:layout_margin="@dimen/edge_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:paddingLeft="@dimen/edge_margin"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/plan_viewpager_tv_1"
                    android:drawableLeft="@mipmap/plan_time"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="@string/plan_viewpager_1_1"
                    android:textColor="#2D7DFF"
                    android:textSize="@dimen/dp_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/plan_viewpager_fi_tv_time"
                    android:textColor="#2D7DFF"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_toRightOf="@+id/plan_viewpager_tv_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/home_finished"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:padding="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/plan_viewpager_fi_dealer_name"
                    android:layout_width="match_parent"
                    android:ellipsize="end"
                    android:lines="1"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#333333"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/dp_14"
                    android:textColor="#999999"
                    android:id="@+id/plan_viewpager_fi_address"
                    android:layout_centerHorizontal="true"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/plan_viewpager_fi_dealer_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
            <View
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:background="@color/gray"/>
            <RelativeLayout
                android:padding="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/plan_viewpager_tv_2"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_14"
                    android:text="@string/plan_viewpager_1_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textColor="#999999"
                    android:textSize="@dimen/dp_14"
                    android:id="@+id/plan_viewpager_fi_action_time"
                    android:layout_toRightOf="@+id/plan_viewpager_tv_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textSize="@dimen/dp_14"
                    android:textColor="@color/origin_3"
                    android:id="@+id/plan_viewpager_fi_tips"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
