<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/material_grey_200"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.NestedScrollView
      android:paddingTop="@dimen/dp_5"
        android:paddingLeft="@dimen/edge_margin"
        android:paddingRight="@dimen/edge_margin"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:background="@color/colorWhite"
        app:cardCornerRadius="@dimen/dp_5"
       app:contentPadding="@dimen/dp_10"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/project_detail_titlle"
                android:gravity="top"
                android:textSize="@dimen/dp_14"
                android:textColor="#333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RadioGroup
                android:layout_below="@+id/project_detail_titlle"
                android:id="@+id/rg_gr"
                android:layout_marginTop="@dimen/dp_20"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RadioButton
                    android:id="@+id/rb_yes"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="@dimen/dp_10"
                    android:buttonTintMode="src_in"
                    android:text="是"
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:id="@+id/rb_no"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio_button"
                    android:drawablePadding="@dimen/dp_10"
                    android:text="否"
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </RadioGroup>
            <TextView
                android:id="@+id/tv_describe"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_alignLeft="@+id/rg_gr"
                android:layout_below="@+id/rg_gr"
                android:textSize="@dimen/dp_14"
                android:textColor="#FD8317"
                android:text="说明："
                android:gravity="top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_10"
        app:contentPadding="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/re_top_1"
                android:padding="@dimen/dp_10"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_1"
                    android:src="@mipmap/obtain_evidence"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14" />
                <TextView
                    android:textSize="@dimen/dp_14"
                    android:text="取证"
                    android:layout_toRightOf="@+id/iv_1"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/material_grey_200"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <FrameLayout
                            android:id="@+id/Fr_takePhoto"
                            android:layout_gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_gravity="center"
                                android:src="@mipmap/oval_shaped"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:drawableLeft="@mipmap/ico_takephoto_white"
                                android:text="拍照"
                                android:drawablePadding="@dimen/dp_5"
                                android:textSize="@dimen/dp_14"
                                android:textColor="@color/colorWhite"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </FrameLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                       <FrameLayout
                           android:id="@+id/Fr_takeRecorder"
                           android:layout_gravity="center"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content">
                           <ImageView
                               android:layout_gravity="center"
                               android:src="@mipmap/oval_shaped"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                           <TextView
                               android:id="@+id/tv_recorderBtn"
                               android:layout_gravity="center"
                               android:gravity="center"
                               android:drawableLeft="@mipmap/ico_recorder"
                               android:text="开始录音"
                               android:drawablePadding="@dimen/dp_5"
                               android:textSize="@dimen/dp_14"
                               android:textColor="@color/colorWhite"
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content" />
                       </FrameLayout>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="0dp"
        app:contentPadding="@dimen/dp_10"
        android:background="@color/colorWhite"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@id/iv_2"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/bianji"
                        android:layout_width="@dimen/dp_14"
                        android:layout_height="@dimen/dp_14" />
                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:text="填写备注"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:layout_toRightOf="@+id/iv_2"
                        android:textColor="#333333"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/material_grey_200"/>
                <TextView
                    android:id="@+id/tv_bianji"
                    android:hint="点击编辑"
                    android:layout_marginTop="@dimen/dp_5"
                    android:padding="@dimen/dp_5"
                    android:gravity="top"
                    android:textSize="@dimen/dp_12"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>
    </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_marginTop="@dimen/dp_10"
            app:contentPadding="@dimen/dp_10"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/colorWhite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout

                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


            <RelativeLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_recorder_img"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/recorder_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                    <TextView
                        android:textSize="@dimen/dp_14"
                        android:text="录音"
                        android:layout_toRightOf="@+id/iv_recorder_img"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textColor="#333333"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
            </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_1"
                    android:background="@color/material_grey_200"/>
                <RelativeLayout
                    android:padding="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_recorderName_text"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:textColor="#333333"
                        android:textSize="@dimen/dp_14"
                        android:text="文件名："
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_recorder_name"
                        android:layout_toRightOf="@+id/tv_recorderName_text"
                        android:layout_marginLeft="@dimen/dp_5"
                        android:textSize="@dimen/dp_14"
                        android:textColor="#FD8317"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/tv_play_recorder"
                        android:text="播放"
                        android:layout_alignParentRight="true"
                        android:textSize="@dimen/dp_14"
                        android:textColor="@color/material_blue_800"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginTop="@dimen/dp_10"
        app:contentPadding="@dimen/dp_10"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout

            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:padding="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:id="@+id/iv_3"
                    android:src="@mipmap/images"
                    android:layout_width="@dimen/dp_14"
                    android:layout_height="@dimen/dp_14" />
                <TextView
                    android:layout_toRightOf="@+id/iv_3"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/dp_14"
                    android:textColor="#333333"
                    android:text="照片"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_Unfold"
                    android:layout_alignParentRight="true"
                    android:textColor="#2D7DE1"
                    android:textSize="@dimen/dp_14"
                    android:text="收起"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/material_grey_200"/>
            <RelativeLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/img_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </android.support.v7.widget.RecyclerView>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/bottom_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
               android:layout_gravity="bottom"
                android:layout_below="@+id/bottom_upload"
                android:background="@color/colorWhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:paddingTop="@dimen/dp_10"
                    android:paddingBottom="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_last"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/last"
                            android:layout_width="@dimen/dp_14"
                            android:layout_height="@dimen/dp_14" />
                        <TextView
                            android:id="@+id/tv_last"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:layout_toRightOf="@+id/iv_last"
                            android:textColor="#2D7DFF"
                            android:textSize="@dimen/dp_14"
                            android:layout_centerVertical="true"
                            android:text="上一项"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true"
                            android:rotation="180"
                            android:id="@+id/iv_next"
                            android:src="@mipmap/last"
                            android:layout_width="@dimen/dp_14"
                            android:layout_height="@dimen/dp_14" />
                        <TextView
                            android:id="@+id/tv_next"
                           android:layout_marginRight="@dimen/dp_5"
                           android:layout_toLeftOf="@+id/iv_next"
                            android:textColor="#2D7DFF"
                            android:textSize="@dimen/dp_14"
                            android:layout_centerVertical="true"
                            android:text="下一项"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                </RelativeLayout>
            </FrameLayout>
            <FrameLayout
                android:paddingBottom="@dimen/dp_5"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:visibility="visible"
                android:scaleType="fitXY"
                android:src="@mipmap/attendance_background"
                android:layout_width="@dimen/dp_60"
                android:layout_height="@dimen/dp_60" />
            <TextView
                android:layout_gravity="center"
                android:drawableTop="@mipmap/ico_upload"
                android:text="上传本项"
                android:textSize="@dimen/dp_10"
                android:textColor="#FFFFFF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            </FrameLayout>
        </FrameLayout>
    </RelativeLayout>
</LinearLayout>
