<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:paddingLeft="@dimen/dp_5"
    android:paddingRight="@dimen/dp_5">
    <CheckBox
        android:visibility="gone"
        android:id="@+id/ck_check"
        style="@style/MyCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_10" />

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/dp_5"
        app:cardBackgroundColor="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/ck_check"
        app:cardCornerRadius="@dimen/dp_5"
        app:cardElevation="2dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5">
            <RelativeLayout
                android:id="@+id/card_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/up_tv_schedule"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/item_root_recycleviewtextviewshape"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp_10" />
                <TextView
                    android:id="@+id/f_type"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_alignTop="@+id/up_tv_schedule"
                    android:layout_toRightOf="@+id/up_tv_schedule"
                    android:background="@drawable/bg_white_blue_frame_background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/up_tv_time"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_12"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_alignBottom="@+id/up_tv_schedule"
                    android:layout_toRightOf="@+id/up_tv_schedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_upload_btn"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/upload_on"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/material_grey_200"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/up_tv_project_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:textColor="@color/material_grey_850"
                        android:textSize="9dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/up_tv_project_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:textColor="@color/material_grey_850"
                        android:textSize="@dimen/dp_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/home_company" />
                    <TextView
                        android:id="@+id/up_tv_project_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:textColor="@color/material_grey_650"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp_10"
                        android:layout_height="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/location" />

                    <TextView
                        android:id="@+id/up_tv_project_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:textColor="@color/material_grey_650"
                        android:textSize="@dimen/dp_12" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/material_grey_200"/>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_below="@+id/bottom_line"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/up_tv_update_time"
                    android:textSize="12dp"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_toRightOf="@+id/up_tv_update_time"
                    android:textSize="12dp"
                    android:text="更新"
                    android:textColor="#333333"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/up_item_data"
                    android:textSize="12dp"
                    android:text="暂无数据上传"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:textColor="#FF8103"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
