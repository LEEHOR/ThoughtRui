<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lin_all"
    android:background="@color/background_translunt"
    android:orientation="vertical">
    <View
        android:id="@+id/tv_view"
        android:background="@color/background_translunt"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:padding="@dimen/dp_10"
            android:layout_toLeftOf="@+id/tv_submit"
            android:background="@color/colorWhite"
            style="@style/normal_edittext_style"
            android:id="@+id/ed_input"
            android:hint="@string/fill_in_score"
            android:textColorHint="#999999"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="number"
            android:maxLength="3"
            android:gravity="top"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_submit"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:layout_alignTop="@+id/ed_input"
            android:layout_alignParentRight="true"
            android:background="@color/material_blue_500"
            android:textSize="@dimen/dp_14"
            android:text="@string/fill_in_save"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
