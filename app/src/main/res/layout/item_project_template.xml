<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/edge_margin">
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/template_project" />

    <RelativeLayout
        android:id="@+id/root_re"
        android:paddingTop="@dimen/dp_20"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">
        <TextView
            android:gravity="start"
            android:lineHeight="@dimen/dp_20"
            android:id="@+id/template_name"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:textSize="@dimen/dp_16"
            android:textColor="#333333"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="end"
            android:id="@+id/template_time"
            android:textColor="#B6B6B6"
            android:textSize="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_20"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/template_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</FrameLayout>
</androidx.cardview.widget.CardView>
