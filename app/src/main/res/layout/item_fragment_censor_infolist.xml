<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_list_cardView"
    android:layout_marginLeft="@dimen/edge_margin"
    android:layout_marginRight="@dimen/edge_margin"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardElevation="3dp"
    app:cardCornerRadius="@dimen/dp_5"
    app:contentPadding="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
      <LinearLayout
          android:orientation="vertical"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:text="dsdsds"
              android:id="@+id/tv_tittle"
              android:gravity="top"
              android:padding="@dimen/dp_5"
              android:textSize="@dimen/dp_14"
              android:textColor="#333333"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />
          <View
              android:layout_marginTop="@dimen/dp_5"
              android:layout_width="match_parent"
              android:layout_height="1dp"
              android:background="@color/material_grey_200"/>
          <RelativeLayout
              android:paddingLeft="@dimen/dp_5"
              android:paddingTop="@dimen/edge_margin"
              android:paddingBottom="@dimen/edge_margin"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
              <TextView
                  android:id="@+id/tv_review_tag"
                  android:textColor="#2D7DFF"
                  android:background="@drawable/bg_white_blue_frame_background"
                  android:layout_alignParentLeft="true"
                  android:layout_centerVertical="true"
                  android:textSize="@dimen/dp_14"
                  android:text="审核通过"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content" />

              <TextView
                  android:id="@+id/tv_review_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="@dimen/dp_5"
                  android:drawableLeft="@mipmap/ic_sh"
                  android:drawablePadding="@dimen/dp_5"
                  android:text="user"
                  android:textColor="#333333"
                  android:textSize="@dimen/dp_14" />
          </RelativeLayout>
          <TextView
              android:textSize="@dimen/dp_14"
              android:textColor="#333333"
              android:id="@+id/tv_review_suggestion"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/bg_pinck_textview"/>
      </LinearLayout>
    </androidx.cardview.widget.CardView>

