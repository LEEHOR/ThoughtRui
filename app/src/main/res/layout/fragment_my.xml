<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorWhite">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@mipmap/myfragment_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/re_mytop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10">

                <com.coahr.thoughtrui.widgets.CircularImageView
                    android:id="@+id/my_header"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/defalut_user_head"
                    app:border="true"
                    app:border_color="@color/colorWhite" />

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="@string/my_fragment_1"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/dp_16" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/edge_margin"
                    android:layout_marginRight="@dimen/edge_margin"
                    android:layout_marginBottom="@dimen/dp_5"
                    app:cardCornerRadius="@dimen/dp_5"
                    app:cardElevation="5dp"
                    app:contentPadding="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/ico_dxz"
                                android:drawablePadding="@dimen/dp_5"
                                android:gravity="center_horizontal"
                                android:text="@string/my_fragment_4"
                                android:textColor="#4D4D4D"
                                android:textSize="@dimen/dp_14"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/ico_dsc"
                                android:drawablePadding="@dimen/dp_5"
                                android:gravity="center_horizontal"
                                android:text="@string/my_fragment_2"
                                android:textSize="@dimen/dp_14" />

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/ico_dks"
                                android:drawablePadding="@dimen/dp_5"
                                android:gravity="center_horizontal"
                                android:text="@string/my_fragment_3"
                                android:textColor="#4D4D4D"
                                android:textSize="@dimen/dp_14" />

                            <TextView

                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableTop="@mipmap/ico_wwc"
                                android:drawablePadding="@dimen/dp_5"
                                android:gravity="center_horizontal"
                                android:text="@string/my_fragment_5"
                                android:textColor="#4D4D4D"
                                android:textSize="@dimen/dp_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_10"
                            android:layout_marginBottom="@dimen/dp_10"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_dxz"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="#333333"
                                android:textSize="@dimen/dp_14"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/tv_dsc"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="#333333"
                                android:textSize="@dimen/dp_14" />

                            <TextView
                                android:id="@+id/tv_dks"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="#333333"
                                android:textSize="@dimen/dp_14" />

                            <TextView
                                android:id="@+id/tv_wwc"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="#333333"
                                android:textSize="@dimen/dp_14" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </LinearLayout>
        <!--<TextView-->
        <!--android:id="@+id/tv_quit_account"-->
        <!--android:layout_marginRight="15dp"-->
        <!--android:layout_marginTop="@dimen/dp_30"-->
        <!--android:layout_gravity="end"-->
        <!--android:drawablePadding="@dimen/dp_5"-->
        <!--android:textSize="@dimen/dp_14"-->
        <!--android:textColor="@color/colorWhite"-->
        <!--android:text="退出"-->
        <!--android:drawableLeft="@mipmap/quit_account"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content" />-->
    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/re_action_plan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="@dimen/edge_margin">

                <ImageView
                    android:id="@+id/iv_xdbb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ico_plan_action" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_xdbb"
                    android:text="@string/my_fragment_13"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14" />


                <ImageView
                    android:id="@+id/iv_action_plan_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:src="@mipmap/back" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/material_grey_15" />

            <RelativeLayout
                android:id="@+id/re_message_center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="@dimen/edge_margin">

                <ImageView
                    android:id="@+id/iv_xxzx"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/xxzx" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_xxzx"
                    android:text="@string/my_fragment_6"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/tv_xx_count"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_toLeftOf="@+id/iv_xx_back"
                    android:background="@drawable/bg_red_circle"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_xx_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:src="@mipmap/back" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/material_grey_15" />

            <RelativeLayout
                android:id="@+id/re_upload_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="@dimen/edge_margin">

                <ImageView
                    android:id="@+id/iv_sjsc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ico_sjsc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_sjsc"
                    android:text="@string/my_fragment_12"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:id="@+id/iv_sjsc_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:src="@mipmap/back" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/material_grey_15" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="@dimen/edge_margin">

                <ImageView
                    android:id="@+id/iv_cc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ico_cc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_cc"
                    android:text="@string/my_fragment_7"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/tv_cckj"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/material_grey_15" />

            <RelativeLayout
                android:id="@+id/re_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="@dimen/edge_margin">

                <ImageView
                    android:id="@+id/iv_qc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ico_qchc" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_qc"
                    android:text="@string/my_fragment_8"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/tv_qchc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_5"
                    android:layout_toLeftOf="@+id/iv_qchc_back" />

                <ImageView
                    android:id="@+id/iv_qchc_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:src="@mipmap/back" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:background="@color/material_grey_15" />

            <RelativeLayout
                android:id="@+id/re_change_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite"
                android:padding="@dimen/edge_margin">

                <ImageView
                    android:id="@+id/iv_xg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ico_xgmm" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_xg"
                    android:text="@string/my_fragment_9"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:id="@+id/iv_xgmm_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:src="@mipmap/back" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_feed_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:background="@color/colorWhite"
                android:padding="@dimen/edge_margin">

                <ImageView
                    android:id="@+id/iv_bz"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ico_bzfk" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_toRightOf="@+id/iv_bz"
                    android:text="@string/my_fragment_10"
                    android:textColor="#333333"
                    android:textSize="@dimen/dp_14" />

                <ImageView
                    android:id="@+id/iv_bzfk_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:rotation="180"
                    android:src="@mipmap/back" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_quit_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_40"
                android:layout_marginRight="@dimen/dp_30"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/bg_blue_white_frame_background"
                android:gravity="center"
                android:padding="@dimen/edge_margin"
                android:text="@string/my_fragment_11"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/dp_14" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
