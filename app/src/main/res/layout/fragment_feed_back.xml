<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:id="@+id/root_re"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.coahr.thoughtrui.widgets.TittleBar.MyTittleBar
            android:id="@+id/feedback_tittle"
            app:tittle="帮助与反馈"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
        android:padding="@dimen/edge_margin"
        android:textSize="@dimen/dp_14"
        android:textColor="#999999"
        android:text="（必选）请选择你想反馈的问题"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/edge_margin"
        android:paddingRight="@dimen/edge_margin"
        android:paddingTop="@dimen/edge_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:padding="@dimen/dp_5"
            style="@style/MyCheckBox"
            android:id="@+id/ck_btn_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignBaseline="@+id/ck_btn_1"
            android:id="@+id/tv_1"
            android:textSize="@dimen/dp_14"
            android:text="功能异常：功能故障或不可用"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/ck_btn_1"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignLeft="@+id/tv_1"
            android:layout_below="@+id/ck_btn_1"
            android:layout_marginTop="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_200"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/edge_margin"
        android:paddingRight="@dimen/edge_margin"
        android:paddingTop="@dimen/edge_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:padding="@dimen/dp_5"
            style="@style/MyCheckBox"
            android:id="@+id/ck_btn_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignBaseline="@+id/ck_btn_2"
            android:id="@+id/tv_2"
            android:textSize="@dimen/dp_14"
            android:text="产品建议：用的不爽，我有建议"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/ck_btn_2"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignLeft="@+id/tv_2"
            android:layout_below="@+id/ck_btn_2"
            android:layout_marginTop="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_200"/>
    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:background="@color/colorWhite"
        android:paddingLeft="@dimen/edge_margin"
        android:paddingRight="@dimen/edge_margin"
        android:paddingTop="@dimen/edge_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:padding="@dimen/dp_5"
            style="@style/MyCheckBox"
            android:id="@+id/ck_btn_3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignBaseline="@+id/ck_btn_3"
            android:id="@+id/tv_3"
            android:textSize="@dimen/dp_14"
            android:text="其他问题"
            android:textColor="#333333"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/ck_btn_3"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_alignLeft="@+id/tv_3"
            android:layout_below="@+id/ck_btn_3"
            android:layout_marginTop="@dimen/edge_margin"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/material_grey_200"/>
    </RelativeLayout>
        <RadioGroup
            android:id="@+id/rg_group"
            android:background="@color/colorWhite"
            android:padding="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioButton
                android:id="@+id/rb_1"
                android:textSize="@dimen/dp_14"
                android:text="功能异常：功能故障或不可用"
                android:textColor="#333333"
                android:padding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignLeft="@+id/tv_3"
                android:layout_below="@+id/ck_btn_3"
                android:layout_marginTop="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/material_grey_200"/>
            <RadioButton
                android:id="@+id/rb_2"
                android:textSize="@dimen/dp_14"
                android:text="产品建议：用的不爽，我有建议"
                android:textColor="#333333"
                android:padding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignLeft="@+id/tv_3"
                android:layout_below="@+id/ck_btn_3"
                android:layout_marginTop="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/material_grey_200"/>
            <RadioButton
                android:id="@+id/rb_3"
                android:textSize="@dimen/dp_14"
                android:text="其他问题"
                android:textColor="#333333"
                android:padding="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignLeft="@+id/tv_3"
                android:layout_below="@+id/ck_btn_3"
                android:layout_marginTop="@dimen/edge_margin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/material_grey_200"/>
        </RadioGroup>
    <TextView
        android:padding="@dimen/edge_margin"
        android:textSize="@dimen/dp_14"
        android:textColor="#999999"
        android:text="请补充详细问题和意见"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:cursorVisible="false"
            android:id="@+id/ed_input"
            android:layout_alignParentStart="true"
            android:background="@color/colorWhite"
            style="@style/normal_edittext_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:hint="请输入不少于10个字的描述"
            android:lines="5"
            android:textColor="#333333"
            android:textSize="@dimen/dp_14"
            android:padding="@dimen/edge_margin"
            android:textColorHint="#999999" />
        <TextView
            android:text="0/300"
            android:id="@+id/tv_countSize"
            android:textColor="#999999"
            android:textSize="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/ed_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_submit"
        android:padding="@dimen/edge_margin"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dp_14"
        android:text="提交"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg_blue_white_frame_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</RelativeLayout>
